        <artifactId>common</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
      </dependency>

      <dependency>
        <groupId>org.sdo.iotplatformsdk</groupId>
        <artifactId>to0service</artifactId>
        <version>${project.version}</version>
        <type>pom</type>
      </dependency>

      <dependency>
        <groupId>org.sdo.iotplatformsdk.common</groupId>
